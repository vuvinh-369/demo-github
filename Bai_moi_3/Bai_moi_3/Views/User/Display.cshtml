@model Bai_moi_3.Models.User

<h2>Chi Tiết Người Dùng: @Model.Name</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Email:</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        @* Cẩn thận khi hiển thị Password ra View, thường không nên làm vậy vì lý do bảo mật *@
        <dt class="col-sm-2">Mật khẩu:</dt>
        <dd class="col-sm-10">********</dd> @* Chỉ hiển thị sao để đảm bảo bảo mật *@

        <dt class="col-sm-2">Vai trò:</dt>
        <dd class="col-sm-10">@Model.Role</dd>

        <dt class="col-sm-2">Ngày sinh:</dt>
        <dd class="col-sm-10">@Model.DateOfBirth.ToShortDateString()</dd> @* Định dạng ngày tháng *@

        <dt class="col-sm-2">Địa chỉ:</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Điện thoại:</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>

        <dt class="col-sm-2">Ngày tạo:</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</dd> @* Định dạng ngày giờ *@

        @if (!string.IsNullOrEmpty(Model.ImageUrl1))
        {
            <img src="@Model.ImageUrl1" alt="User image" style="max-width:
200px;" />
        }
    </dl>
</div>

<div>
    <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary">Chỉnh sửa</a> |
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</div>