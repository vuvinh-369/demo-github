@model IEnumerable<Bai_moi_3.Models.User>

<h2>Danh Sách Người Dùng</h2>

<p>
    <a asp-action="Add" class="btn btn-success">Thêm Người Dùng Mới</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Email</th>
            <th>Vai trò</th>
            <th>Ngày sinh</th>
            <th>Địa chỉ</th>
            <th>Số điện thoại</th>
            <th>Ngày tạo</th> 
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>@user.DateOfBirth.ToShortDateString()</td> @* Định dạng ngày tháng *@
                <td>@user.Address</td>
                <td>@user.PhoneNumber</td>
                <td>@user.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td> @* Định dạng ngày giờ *@
             
                <td>
                    <a asp-action="Display" asp-route-id="@user.Id" class="btn btn-info btn-sm">Xem</a> |
                    <a asp-action="Update" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Sửa</a> |
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>